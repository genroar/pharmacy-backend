# Database Configuration (Production)
DATABASE_URL="postgresql://prod_user:secure_password@prod_host:5432/medibill_pulse_prod?schema=public"

# JWT Configuration (Production)
JWT_SECRET=production-super-secret-jwt-key-very-long-and-random-2024
JWT_EXPIRES_IN=24h

# Server Configuration (Production)
PORT=5001
NODE_ENV=production

# Frontend Configuration (Production)
FRONTEND_URL=https://app.medibillpulse.com

# CORS Configuration (Production)
CORS_ORIGINS=https://app.medibillpulse.com,https://admin.medibillpulse.com,https://medibillpulse.com

# Rate Limiting Configuration (Production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Logging Configuration (Production)
LOG_LEVEL=error
ENABLE_REQUEST_LOGGING=false

# Security Configuration (Production)
BCRYPT_ROUNDS=14
SESSION_SECRET=production-session-secret-very-secure-2024

# File Upload Configuration (Production)
MAX_FILE_SIZE=10mb
UPLOAD_PATH=/var/uploads

# Production Configuration
DEBUG_MODE=false
ENABLE_SWAGGER=false
SWAGGER_URL=/api-docs

# Default Settings (Production)
DEFAULT_PHARMACY_NAME=MediBill Pulse Pharmacy
DEFAULT_PHARMACY_EMAIL=info@medibillpulse.com
DEFAULT_PHARMACY_PHONE=+1 555 123 4567
DEFAULT_PHARMACY_LICENSE=PHR-2024-001
DEFAULT_TAX_RATE=17

# System Defaults (Production)
DEFAULT_ADMIN_EMAIL=admin@medibillpulse.com
DEFAULT_ADMIN_PHONE=+1 555 000 0000
SYSTEM_EMAIL=system@medibillpulse.com
BRANCH_EMAIL=branch@medibillpulse.com

# Email Configuration (Production)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@medibillpulse.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@medibillpulse.com

# Analytics (Production)
ENABLE_ANALYTICS=true
ANALYTICS_API_KEY=your-analytics-key

# Redis Configuration (Production)
REDIS_URL=redis://prod-redis:6379

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/medibillpulse.com.crt
SSL_KEY_PATH=/etc/ssl/private/medibillpulse.com.key
